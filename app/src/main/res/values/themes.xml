<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Air" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main_grey</item>
        <item name="colorOnPrimary">@color/main_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BoldTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldTextWhiteBiggest" parent="BoldTextWhite">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BoldTextWhiteMiddle" parent="BoldTextWhite">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="BoldTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTextBlackBiggest" parent="BoldTextBlack">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BoldTextBlackMiddle" parent="BoldTextBlack">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="SwitchButton" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:thumbTint">@color/switch_thumb</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>